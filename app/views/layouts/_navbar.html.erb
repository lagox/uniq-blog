<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Ерлан Кусаинов", root_path, class: "brand" %>
      <ul class="nav">
        <li>
          <%= link_to "Домой", root_path %>
        </li>
        <li>
          <%= link_to "О блоге", about_path %>
        </li>
        <li>
          <%= link_to "Контакты", contact_path %>
        </li>
      </ul>
      <%= form_tag(search_path, method: "get", class: "navbar-search pull-left") do %>
        <%= text_field_tag :search, nil, class: "search-query span2", placeholder: "поиск..." %>  
      <% end %>
      <ul class="nav pull-right">
        <% if current_user %>
          <li class="loggen_in">Вы вошли как <%= current_user.email %></li>
          <li>
            <%= link_to "Выйти", logout_path %>
          </li>
        <% else %>
          <li>
            <%= link_to "Регистрация", signup_path %>
          </li>
          <li>
            <%= link_to "Войти", login_path %>
          </li>
        <% end %>
        
      </ul>
    </div>
  </div>
</div>