<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "uniqsystems.ru", root_path, class: "brand" %>
      <ul class="nav">
        <li>
          <%= link_to "Home", root_path %>
        </li>
        <li>
          <%= link_to "About", about_path %>
        </li>
        <li>
          <%= link_to "Contact", contact_path %>
        </li>
      </ul>
      <%= form_tag(search_path, method: "get", class: "navbar-search pull-left") do %>
        <%= text_field_tag :search, nil, class: "search-query span2", placeholder: "search..." %>  
      <% end %>
      <ul class="nav pull-right">
        <% if current_user %>
          <li class="loggen_in">Logged in as <%= current_user.email %></li>
          <li>
            <%= link_to "Log out", logout_path %>
          </li>
        <% else %>
          <li>
            <%= link_to "Sign up", signup_path %>
          </li>
          <li>
            <%= link_to "Log in", login_path %>
          </li>
        <% end %>
        
      </ul>
    </div>
  </div>
</div>