<%= form_for([@post, @post.comments.new]) do |f| %>
  <div class="field">
    <%= f.label :author, "Автор:" %>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :comment, "Комментарий:" %>
    <%= f.text_area :comment, :rows => 10 %>
  </div>
  <div class="field">
    <%= f.submit "Отправить", :class => "btn btn-primary" %>
  </div>

<% end %>