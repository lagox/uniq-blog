<%= form_for(@post, html: {class: "form-horizontal"}) do |p| %>
  <fieldset>
    <legend>Добавить запись</legend>
    <%= error_messages_for(@post) %>
    <div class="control-group">
      <%= p.label :category_id, "Категория:" %>
      <div class="controls">
        <%= p.collection_select :category_id, Category.all(:order => "title"), :id, :title, :include_blank => false %>
      </div>
    </div>
    <div class="control-group">
      <%= p.label :title, "Title:" %>
      <div class="controls">
        <%= p.text_field :title, placeholder: "Мой новый пост" %>
      </div>
    </div>
    <div class="control-group">
      <%= p.label :post, "Текст:" %>
      <div class="controls">
        <%= p.text_area :post, :cols => 40, :rows => 15, :class => "redactor" %>
        <%= redactor %>
      </div>
    </div>
    <div class="control-group">
      <%= p.label :tag_list, "Теги:" %>
      <div class="controls">
        <%= p.text_field :tag_list %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= hidden_field_tag('post[user_id]', current_user.id ) %>
      </div>
    </div>
    <div class="form-actions">
      <%= p.submit "Отправить", class: "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>