<h2>Вы искали: <span id="find-query"><%= params[:search] %></span></h2>

<div class="result-block">
   <% @results.each do |r| %>
    <div class="show-post">
    <h3 class="post-title"><%= link_to r.title, r %></h3>
    <div class="post-body"><%= raw(more_post(r.post)) %></div>
    <div class="post-info">
      <%= r.created_at.to_formatted_s(:short)  %>
      <div class="count-comment">
        <%= link_to comment_icon + " #{r.comments.count}", p %>
      </div>
    </div>
   </div>
   <% end %>
</div>